/* Login Page */
.login-page {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
}

.login-page .card {
    border: none;
    border-radius: 1rem;
}

.login-page .input-group-text {
    background-color: transparent;
    border-right: none;
}

.login-page .form-control {
    border-left: none;
}

.login-page .form-control:focus {
    box-shadow: none;
}

.login-page .input-group:focus-within .input-group-text {
    border-color: var(--primary-color);
}

/* Dashboard Page */
.dashboard-page .card {
    transition: all 0.3s;
}

.dashboard-page .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.15);
}

.dashboard-page .bg-primary,
.dashboard-page .bg-success,
.dashboard-page .bg-warning,
.dashboard-page .bg-info {
    background: linear-gradient(135deg, currentColor 0%, color-mix(in srgb, currentColor, black 20%) 100%);
}

/* DataTable Component */
.datatable-wrapper {
    width: 100%;
}

.datatable-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.datatable-wrapper table {
    width: 100%;
    margin-bottom: 0;
}

.datatable-wrapper .table th {
    white-space: nowrap;
}

.datatable-wrapper .table th.sortable {
    cursor: pointer;
    position: relative;
    padding-right: 1.5rem;
}

.datatable-wrapper .table th.sortable::after {
    content: 'â‡…';
    position: absolute;
    right: 0.5rem;
    opacity: 0.3;
}

.datatable-wrapper .pagination {
    margin-bottom: 0;
}

.datatable-wrapper .pagination .page-link {
    border: 1px solid #dee2e6;
    color: var(--primary-color);
    padding: 0.5rem 0.75rem;
    margin: 0 0.25rem;
    border-radius: 0.375rem;
}

.datatable-wrapper .pagination .page-item.active .page-link {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
}

.datatable-wrapper .pagination .page-item.disabled .page-link {
    opacity: 0.5;
    cursor: not-allowed;
}

/* Modal Component */
.modal-backdrop {
    background-color: rgba(0, 0, 0, 0.5);
}

.modal.fade .modal-dialog {
    transition: transform 0.3s ease-out;
}

.modal.show .modal-dialog {
    transform: none;
}

/* Header Component */
.navbar .dropdown-toggle::after {
    display: none;
}

.navbar .dropdown-menu {
    margin-top: 0.5rem;
}

.navbar #toggle-sidebar {
    border: none;
    background: none;
}

.navbar #toggle-sidebar:hover {
    background-color: rgba(255, 255, 255, 0.1);
}

/* Sidebar Component */
.sidebar .position-sticky {
    top: 0;
    height: calc(100vh - var(--header-height));
    padding-bottom: 1rem;
}

.sidebar .nav {
    padding: 1rem 0;
}

.sidebar .nav-link {
    display: flex;
    align-items: center;
    font-size: 0.95rem;
    font-weight: 500;
}

.sidebar .menu-text {
    transition: opacity var(--transition-speed);
}

.sidebar.collapsed .menu-text {
    opacity: 0;
}

/* Form Validator Component */
.form-control.is-invalid,
.form-select.is-invalid {
    background-image: none;
}

.invalid-feedback {
    animation: shake 0.3s;
}

@keyframes shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-5px); }
    75% { transform: translateX(5px); }
}

/* Toast Notifications (Toastify) */
.toastify {
    padding: 12px 20px;
    color: #ffffff;
    border-radius: 0.5rem;
    font-weight: 500;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
}

.toastify-right {
    right: 15px;
}

.toastify-top {
    top: 15px;
}

/* Loading States */
.spinner-border-sm {
    width: 1rem;
    height: 1rem;
    border-width: 0.2em;
}

/* Stats Cards */
.card.bg-primary,
.card.bg-success,
.card.bg-warning,
.card.bg-info {
    border: none;
}

.card.bg-primary .card-body,
.card.bg-success .card-body,
.card.bg-warning .card-body,
.card.bg-info .card-body {
    color: white;
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: 3rem 1rem;
}

.empty-state i {
    font-size: 4rem;
    color: var(--secondary-color);
    margin-bottom: 1rem;
}

.empty-state h5 {
    color: var(--dark-color);
    margin-bottom: 0.5rem;
}

.empty-state p {
    color: var(--secondary-color);
    margin-bottom: 1.5rem;
}

/* Action Buttons */
.btn-group-sm > .btn,
.btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
}

.btn-group > .btn {
    margin-right: 0.25rem;
}

.btn-group > .btn:last-child {
    margin-right: 0;
}

/* Alerts */
.alert {
    border: none;
    border-radius: 0.5rem;
    padding: 1rem 1.25rem;
}

.alert i {
    margin-right: 0.5rem;
}

/* Progress Bars */
.progress {
    height: 1rem;
    border-radius: 0.5rem;
}

.progress-bar {
    transition: width 0.6s ease;
}

/* Avatars */
.avatar {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    object-fit: cover;
}

.avatar-sm {
    width: 2rem;
    height: 2rem;
}

.avatar-lg {
    width: 4rem;
    height: 4rem;
}

/* Timeline */
.timeline {
    position: relative;
    padding: 0;
    list-style: none;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 1rem;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #dee2e6;
}

.timeline-item {
    position: relative;
    padding-left: 3rem;
    padding-bottom: 2rem;
}

.timeline-item::before {
    content: '';
    position: absolute;
    left: 0.5rem;
    top: 0;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background: var(--primary-color);
    border: 2px solid white;
    box-shadow: 0 0 0 2px var(--primary-color);
}
