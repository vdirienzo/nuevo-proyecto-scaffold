/**
 * Card component styles
 */
export interface CardStyles {
  base: string;
  variants: {
    default: string;
    elevated: string;
    outlined: string;
    ghost: string;
  };
  interactive?: string;
}

/**
 * All component styles
 */
export interface ComponentStyles {
  button: ButtonStyles;
  input: InputStyles;
  card: CardStyles;
  [key: string]: any;
}

/**
 * Complete design system configuration
 */
export interface DesignSystemConfig {
  /** Design system name */
  name: DesignSystemName;
  /** Display name */
  displayName: string;
  /** Description */
  description: string;
  /** Design tokens */
  tokens: DesignTokens;
  /** Component styles */
  components: ComponentStyles;
  /** Custom CSS classes or utilities */
  utilities?: Record<string, string>;
  /** Theme-specific metadata */
  meta?: {
    author?: string;
    version?: string;
    homepage?: string;
    tags?: string[];
  };
}

/**
 * Theme mode
 */
export type ThemeMode = 'light' | 'dark' | 'system';

/**
 * Responsive breakpoint
 */
export type Breakpoint = 'mobile' | 'tablet' | 'desktop' | 'wide';

/**
 * Animation variant
 */
export type AnimationVariant =
  | 'fade'
  | 'slide-up'
  | 'slide-down'
  | 'slide-left'
  | 'slide-right'
  | 'scale'
  | 'float-blur'
  | 'soft-press'
  | 'sharp-pop'
  | 'elastic-bounce'
  | 'precise';

/**
 * Component size
 */
export type ComponentSize = 'xs' | 'sm' | 'md' | 'lg' | 'xl';

/**
 * Component variant
 */
export type ComponentVariant =
  | 'primary'
  | 'secondary'
  | 'outline'
  | 'ghost'
  | 'danger'
  | 'success'
  | 'warning'
  | 'info';

/**
 * Design system context value
 */
export interface DesignSystemContextValue {
  config: DesignSystemConfig;
  tokens: DesignTokens;
  components: ComponentStyles;
  setSystem: (systemName: string) => void | Promise<void>;
}

/**
 * Props for components accepting design system variants
 */
export interface DesignSystemComponentProps {
  variant?: ComponentVariant;
  size?: ComponentSize;
  disabled?: boolean;
  loading?: boolean;
  className?: string;
}

/**
 * Responsive value type
 */
export type ResponsiveValue<T> = T | {
  mobile?: T;
  tablet?: T;
  desktop?: T;
  wide?: T;
};

/**
 * CSS custom properties map
 */
export interface CSSCustomProperties {
  [key: `--${string}`]: string | number;
}
