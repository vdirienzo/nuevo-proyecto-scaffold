import React from 'react';
import { cva, type VariantProps } from 'class-variance-authority';
import { cn } from '@/lib/utils';

const buttonVariants = cva(
  'inline-flex items-center justify-center gap-2 rounded-geist font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-geist-blue focus:ring-offset-2 focus:ring-offset-geist-black disabled:opacity-50 disabled:pointer-events-none',
  {
    variants: {
      variant: {
        primary: [
          'bg-gradient-to-r from-geist-blue via-geist-violet to-geist-magenta',
          'text-white shadow-geist',
          'hover:shadow-geist-md hover:scale-[1.02]',
          'active:scale-[0.98]',
        ].join(' '),
        secondary: [
          'bg-geist-black-card border border-geist-gray-700',
          'text-geist-white shadow-geist',
          'hover:bg-geist-black-lighter hover:border-geist-gray-600',
          'hover:shadow-geist-md hover:scale-[1.02]',
          'active:scale-[0.98]',
        ].join(' '),
        outline: [
          'bg-transparent border border-geist-gray-700',
          'text-geist-white',
          'hover:bg-geist-black-card hover:border-geist-gray-600',
          'hover:scale-[1.02]',
          'active:scale-[0.98]',
        ].join(' '),
        ghost: [
          'bg-transparent border-none',
          'text-geist-gray-300',
          'hover:bg-geist-black-card hover:text-geist-white',
          'hover:scale-[1.02]',
          'active:scale-[0.98]',
        ].join(' '),
        danger: [
          'bg-geist-error border-none',
          'text-white shadow-geist',
          'hover:bg-red-600 hover:shadow-geist-md',
          'hover:scale-[1.02]',
          'active:scale-[0.98]',
        ].join(' '),
        glow: [
          'bg-gradient-to-r from-geist-blue via-geist-violet to-geist-magenta',
          'text-white shadow-geist-glow-blue',
          'hover:shadow-geist-glow-violet hover:scale-[1.02]',
          'active:scale-[0.98]',
          'animate-glow-pulse',
        ].join(' '),
      },
      size: {
        sm: 'h-8 px-3 text-sm',
        md: 'h-10 px-4 text-base',
        lg: 'h-12 px-6 text-lg',
        icon: 'h-10 w-10',
      },
    },
    defaultVariants: {
      variant: 'primary',
      size: 'md',
    },
  }
);

export interface ButtonProps
  extends React.ButtonHTMLAttributes<HTMLButtonElement>,
    VariantProps<typeof buttonVariants> {
  /** Show loading spinner */
  loading?: boolean;
  /** Icon to display before children */
  leftIcon?: React.ReactNode;
  /** Icon to display after children */
  rightIcon?: React.ReactNode;
}

export const Button = React.forwardRef<HTMLButtonElement, ButtonProps>(
  (
    {
      className,
      variant,
      size,
      loading = false,
      leftIcon,
      rightIcon,
      children,
      disabled,
      ...props
    },
    ref
  ) => {
    return (
      <button
        ref={ref}
        className={cn(buttonVariants({ variant, size, className }))}
        disabled={disabled || loading}
        {...props}
      >
        {loading && (
          <svg
            className="animate-spin h-4 w-4"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
          >
            <circle
              className="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              strokeWidth="4"
            />
            <path
              className="opacity-75"
              fill="currentColor"
              d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
            />
          </svg>
        )}
        {!loading && leftIcon && <span className="inline-flex">{leftIcon}</span>}
        {children}
        {!loading && rightIcon && <span className="inline-flex">{rightIcon}</span>}
      </button>
    );
  }
);

Button.displayName = 'Button';

// Utility function for className merging (if not already in your project)
// You can also use 'clsx' + 'tailwind-merge' packages
function cn(...inputs: (string | undefined | null | false)[]) {
  return inputs.filter(Boolean).join(' ');
}

export default Button;
