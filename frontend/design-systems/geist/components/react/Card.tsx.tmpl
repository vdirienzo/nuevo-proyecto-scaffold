import React from 'react';
import { cva, type VariantProps } from 'class-variance-authority';
import { cn } from '@/lib/utils';

const cardVariants = cva(
  'rounded-geist-lg transition-all duration-300',
  {
    variants: {
      variant: {
        default: [
          'bg-geist-black-card border border-geist-gray-800',
          'shadow-geist',
        ].join(' '),
        elevated: [
          'bg-geist-black-card border border-geist-gray-800',
          'shadow-geist-md',
        ].join(' '),
        glass: [
          'bg-geist-black-card/50 backdrop-blur-geist',
          'border border-geist-gray-800',
          'shadow-geist',
        ].join(' '),
        gradient: [
          'bg-geist-black-card relative overflow-hidden',
          'before:absolute before:inset-0 before:rounded-[inherit] before:p-[1px]',
          'before:bg-gradient-to-br before:from-geist-blue before:via-geist-violet before:to-geist-magenta',
          'before:-z-10',
          'shadow-geist',
        ].join(' '),
      },
      hover: {
        none: '',
        lift: 'hover:shadow-geist-md hover:-translate-y-1',
        glow: 'hover:shadow-geist-glow-blue hover:border-geist-gray-700',
        scale: 'hover:scale-[1.02]',
      },
      padding: {
        none: 'p-0',
        sm: 'p-4',
        md: 'p-6',
        lg: 'p-8',
      },
    },
    defaultVariants: {
      variant: 'default',
      hover: 'glow',
      padding: 'md',
    },
  }
);

export interface CardProps
  extends React.HTMLAttributes<HTMLDivElement>,
    VariantProps<typeof cardVariants> {
  /** Optional header content */
  header?: React.ReactNode;
  /** Optional footer content */
  footer?: React.ReactNode;
}

export const Card = React.forwardRef<HTMLDivElement, CardProps>(
  (
    {
      className,
      variant,
      hover,
      padding,
      header,
      footer,
      children,
      ...props
    },
    ref
  ) => {
    return (
      <div
        ref={ref}
        className={cn(cardVariants({ variant, hover, padding, className }))}
        {...props}
      >
        {header && (
          <div className="border-b border-geist-gray-800 -mx-6 -mt-6 px-6 py-4 mb-6">
            {header}
          </div>
        )}
        <div className={cn(!header && !footer && padding === 'none' ? '' : '')}>
          {children}
        </div>
        {footer && (
          <div className="border-t border-geist-gray-800 -mx-6 -mb-6 px-6 py-4 mt-6">
            {footer}
          </div>
        )}
      </div>
    );
  }
);

Card.displayName = 'Card';

// Subcomponents for better composition
export const CardHeader = React.forwardRef<
  HTMLDivElement,
  React.HTMLAttributes<HTMLDivElement>
>(({ className, ...props }, ref) => (
  <div
    ref={ref}
    className={cn('flex flex-col space-y-1.5', className)}
    {...props}
  />
));
CardHeader.displayName = 'CardHeader';

export const CardTitle = React.forwardRef<
  HTMLHeadingElement,
  React.HTMLAttributes<HTMLHeadingElement>
>(({ className, ...props }, ref) => (
  <h3
    ref={ref}
    className={cn('text-2xl font-semibold leading-none tracking-tight text-geist-white', className)}
    {...props}
  />
));
CardTitle.displayName = 'CardTitle';

export const CardDescription = React.forwardRef<
  HTMLParagraphElement,
  React.HTMLAttributes<HTMLParagraphElement>
>(({ className, ...props }, ref) => (
  <p
    ref={ref}
    className={cn('text-sm text-geist-gray-400', className)}
    {...props}
  />
));
CardDescription.displayName = 'CardDescription';

export const CardContent = React.forwardRef<
  HTMLDivElement,
  React.HTMLAttributes<HTMLDivElement>
>(({ className, ...props }, ref) => (
  <div ref={ref} className={cn('', className)} {...props} />
));
CardContent.displayName = 'CardContent';

export const CardFooter = React.forwardRef<
  HTMLDivElement,
  React.HTMLAttributes<HTMLDivElement>
>(({ className, ...props }, ref) => (
  <div
    ref={ref}
    className={cn('flex items-center', className)}
    {...props}
  />
));
CardFooter.displayName = 'CardFooter';

// Utility function for className merging
function cn(...inputs: (string | undefined | null | false)[]) {
  return inputs.filter(Boolean).join(' ');
}

export default Card;
