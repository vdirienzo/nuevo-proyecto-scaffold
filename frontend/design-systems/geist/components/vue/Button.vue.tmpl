<template>
  <button
    :class="buttonClasses"
    :disabled="disabled || loading"
    @click="$emit('click', $event)"
  >
    <!-- Loading spinner -->
    <svg
      v-if="loading"
      class="animate-spin h-4 w-4"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
    >
      <circle
        class="opacity-25"
        cx="12"
        cy="12"
        r="10"
        stroke="currentColor"
        stroke-width="4"
      />
      <path
        class="opacity-75"
        fill="currentColor"
        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
      />
    </svg>

    <!-- Left icon -->
    <span v-if="!loading && $slots.leftIcon" class="inline-flex">
      <slot name="leftIcon" />
    </span>

    <!-- Default content -->
    <slot />

    <!-- Right icon -->
    <span v-if="!loading && $slots.rightIcon" class="inline-flex">
      <slot name="rightIcon" />
    </span>
  </button>
</template>

<script setup lang="ts">
/**
 * Button.vue - Geist design system Button component (Vue 3)
 *
 * Autor: {{AUTHOR}}
 * Project: {{PROJECT_NAME}}
 *
 * Production-ready button with variants, sizes, loading state, and gradient effects.
 */

import { computed } from 'vue';

interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost' | 'danger' | 'glow';
  size?: 'sm' | 'md' | 'lg' | 'icon';
  loading?: boolean;
  disabled?: boolean;
}

const props = withDefaults(defineProps<Props>(), {
  variant: 'primary',
  size: 'md',
  loading: false,
  disabled: false,
});

defineEmits<{
  (e: 'click', event: MouseEvent): void;
}>();

const buttonClasses = computed(() => {
  const baseClasses = [
    'inline-flex',
    'items-center',
    'justify-center',
    'gap-2',
    'rounded-geist',
    'font-medium',
    'transition-all',
    'duration-200',
    'focus:outline-none',
    'focus:ring-2',
    'focus:ring-geist-blue',
    'focus:ring-offset-2',
    'focus:ring-offset-geist-black',
    'disabled:opacity-50',
    'disabled:pointer-events-none',
  ];

  // Variant styles
  const variantClasses = {
    primary: [
      'bg-gradient-to-r',
      'from-geist-blue',
      'via-geist-violet',
      'to-geist-magenta',
      'text-white',
      'shadow-geist',
      'hover:shadow-geist-md',
      'hover:scale-[1.02]',
      'active:scale-[0.98]',
    ],
    secondary: [
      'bg-geist-black-card',
      'border',
      'border-geist-gray-700',
      'text-geist-white',
      'shadow-geist',
      'hover:bg-geist-black-lighter',
      'hover:border-geist-gray-600',
      'hover:shadow-geist-md',
      'hover:scale-[1.02]',
      'active:scale-[0.98]',
    ],
    outline: [
      'bg-transparent',
      'border',
      'border-geist-gray-700',
      'text-geist-white',
      'hover:bg-geist-black-card',
      'hover:border-geist-gray-600',
      'hover:scale-[1.02]',
      'active:scale-[0.98]',
    ],
    ghost: [
      'bg-transparent',
      'border-none',
      'text-geist-gray-300',
      'hover:bg-geist-black-card',
      'hover:text-geist-white',
      'hover:scale-[1.02]',
      'active:scale-[0.98]',
    ],
    danger: [
      'bg-geist-error',
      'border-none',
      'text-white',
      'shadow-geist',
      'hover:bg-red-600',
      'hover:shadow-geist-md',
      'hover:scale-[1.02]',
      'active:scale-[0.98]',
    ],
    glow: [
      'bg-gradient-to-r',
      'from-geist-blue',
      'via-geist-violet',
      'to-geist-magenta',
      'text-white',
      'shadow-geist-glow-blue',
      'hover:shadow-geist-glow-violet',
      'hover:scale-[1.02]',
      'active:scale-[0.98]',
      'animate-glow-pulse',
    ],
  };

  // Size styles
  const sizeClasses = {
    sm: ['h-8', 'px-3', 'text-sm'],
    md: ['h-10', 'px-4', 'text-base'],
    lg: ['h-12', 'px-6', 'text-lg'],
    icon: ['h-10', 'w-10'],
  };

  return [
    ...baseClasses,
    ...variantClasses[props.variant],
    ...sizeClasses[props.size],
  ].join(' ');
});
</script>
