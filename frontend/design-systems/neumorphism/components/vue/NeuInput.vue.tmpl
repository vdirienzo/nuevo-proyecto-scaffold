<template>
  <div :class="wrapperClasses">
    <label
      v-if="label && !floatingLabel"
      :for="inputId"
      :class="labelClasses"
    >
      {{ label }}
    </label>

    <div class="relative">
      <div v-if="leftIcon" :class="[iconClasses, 'left-3']">
        <slot name="left-icon">
          {{ leftIcon }}
        </slot>
      </div>

      <input
        :id="inputId"
        ref="inputRef"
        :value="modelValue"
        :type="type"
        :placeholder="placeholder"
        :disabled="disabled"
        :class="inputClasses"
        @input="handleInput"
        @focus="isFocused = true"
        @blur="isFocused = false"
        v-bind="$attrs"
      />

      <label
        v-if="floatingLabel && label"
        :for="inputId"
        :class="floatingLabelClasses"
      >
        {{ label }}
      </label>

      <div v-if="rightIcon" :class="[iconClasses, 'right-3']">
        <slot name="right-icon">
          {{ rightIcon }}
        </slot>
      </div>
    </div>

    <p v-if="error || helperText" :class="helperClasses">
      {{ error || helperText }}
    </p>
  </div>
</template>

<script setup lang="ts">
/**
 * NeuInput Component - Neumorphism Design System (Vue 3)
 *
 * Author: {{AUTHOR}}
 * Project: {{PROJECT_NAME}}
 *
 * Input field with inset shadow and optional floating label
 */

import { ref, computed, useId } from 'vue';

export interface NeuInputProps {
  /** v-model value */
  modelValue?: string | number;
  /** Input type */
  type?: string;
  /** Label text */
  label?: string;
  /** Floating label style */
  floatingLabel?: boolean;
  /** Size variant */
  size?: 'sm' | 'md' | 'lg';
  /** Placeholder text */
  placeholder?: string;
  /** Error message */
  error?: string;
  /** Helper text */
  helperText?: string;
  /** Left icon/text */
  leftIcon?: string;
  /** Right icon/text */
  rightIcon?: string;
  /** Full width */
  fullWidth?: boolean;
  /** Disabled state */
  disabled?: boolean;
}

const props = withDefaults(defineProps<NeuInputProps>(), {
  type: 'text',
  floatingLabel: false,
  size: 'md',
  fullWidth: false,
  disabled: false,
});

const emit = defineEmits<{
  'update:modelValue': [value: string];
}>();

const inputRef = ref<HTMLInputElement>();
const isFocused = ref(false);
const inputId = `neu-input-${useId()}`;

const hasValue = computed(() => {
  return props.modelValue !== undefined && props.modelValue !== '';
});

const handleInput = (event: Event) => {
  const target = event.target as HTMLInputElement;
  emit('update:modelValue', target.value);
};

const wrapperClasses = computed(() => {
  const classes = ['relative'];
  if (props.fullWidth) classes.push('w-full');
  return classes.join(' ');
});

const inputClasses = computed(() => {
  const classes = [
    'neu-pressed w-full',
    'bg-transparent border-none outline-none',
    'neu-text placeholder:neu-text-muted',
    'transition-neu',
    'rounded-soft-md',
  ];

  // Size variants
  if (props.size === 'sm') classes.push('px-3 py-2 text-sm');
  else if (props.size === 'md') classes.push('px-4 py-3 text-base');
  else if (props.size === 'lg') classes.push('px-5 py-4 text-lg');

  // Icon padding adjustments
  if (props.leftIcon) {
    if (props.size === 'sm') classes.push('pl-10');
    else if (props.size === 'md') classes.push('pl-11');
    else if (props.size === 'lg') classes.push('pl-12');
  }

  if (props.rightIcon) {
    if (props.size === 'sm') classes.push('pr-10');
    else if (props.size === 'md') classes.push('pr-11');
    else if (props.size === 'lg') classes.push('pr-12');
  }

  // Floating label spacing
  if (props.floatingLabel) {
    if (props.size === 'sm') classes.push('pt-5 pb-1');
    else if (props.size === 'md') classes.push('pt-6 pb-2');
    else if (props.size === 'lg') classes.push('pt-7 pb-3');
  }

  // States
  if (props.disabled) classes.push('neu-disabled');
  if (props.error) classes.push('shadow-neu-focus-error');
  if (isFocused.value && !props.error) {
    classes.push('shadow-neu-focus dark:shadow-neu-focus-dark');
  }

  return classes.join(' ');
});

const labelClasses = computed(() => {
  return 'block mb-2 text-sm font-medium neu-text-secondary';
});

const floatingLabelClasses = computed(() => {
  const classes = [
    'absolute left-4 pointer-events-none neu-text-secondary transition-all duration-200',
  ];

  const isActive = isFocused.value || hasValue.value;

  if (isActive) {
    if (props.size === 'sm') classes.push('top-1.5 text-xs');
    else if (props.size === 'md') classes.push('top-2 text-xs');
    else if (props.size === 'lg') classes.push('top-2.5 text-sm');
    if (isFocused.value) classes.push('neu-accent');
  } else {
    classes.push('top-1/2 -translate-y-1/2');
    if (props.size === 'sm') classes.push('text-sm');
    else if (props.size === 'md') classes.push('text-base');
    else if (props.size === 'lg') classes.push('text-lg');
  }

  return classes.join(' ');
});

const iconClasses = computed(() => {
  const classes = [
    'absolute top-1/2 -translate-y-1/2 neu-text-muted pointer-events-none',
  ];

  if (props.size === 'sm') classes.push('w-4 h-4');
  else if (props.size === 'md') classes.push('w-5 h-5');
  else if (props.size === 'lg') classes.push('w-6 h-6');

  return classes.join(' ');
});

const helperClasses = computed(() => {
  return `mt-1.5 text-xs ${props.error ? 'text-red-500' : 'neu-text-muted'}`;
});

defineExpose({ inputRef });
</script>

