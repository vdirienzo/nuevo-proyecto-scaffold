/**
 * Obtiene la configuración de un sistema de diseño
 */
export function getDesignSystemConfig(system: DesignSystem): DesignSystemConfig {
  return designSystems[system];
}

/**
 * Obtiene las variables CSS de un sistema de diseño
 */
export function getDesignSystemCSSVariables(system: DesignSystem): string {
  const config = designSystems[system];
  return Object.entries(config.cssVariables)
    .map(([key, value]) => `  ${key}: ${value};`)
    .join('\n');
}

/**
 * Obtiene la extensión de Tailwind de un sistema de diseño
 */
export function getDesignSystemTailwindExtend(system: DesignSystem): Record<string, unknown> {
  return designSystems[system].tailwindExtend;
}

/**
 * Lista todos los sistemas de diseño disponibles
 */
export function listDesignSystems(): Array<{ id: DesignSystem; name: string; description: string }> {
  return Object.entries(designSystems).map(([id, config]) => ({
    id: id as DesignSystem,
    name: config.name,
    description: config.description
  }));
}

/**
 * Valida si un sistema de diseño existe
 */
export function isValidDesignSystem(system: string): system is DesignSystem {
  return system in designSystems;
}

/**
 * Obtiene recomendaciones basadas en criterios
 */
export function recommendDesignSystem(criteria: {
  projectType?: 'corporate' | 'creative' | 'educational' | 'technical';
  accessibility?: 'critical' | 'important' | 'normal';
  complexity?: 'low' | 'medium' | 'high';
}): DesignSystem[] {
  const recommendations: DesignSystem[] = [];

  if (criteria.projectType === 'corporate' || criteria.projectType === 'technical') {
    recommendations.push('geist');
  }

  if (criteria.projectType === 'creative') {
    recommendations.push('glassmorphism', 'neo-brutalism');
  }

  if (criteria.projectType === 'educational') {
    recommendations.push('claymorphism');
  }

  if (criteria.accessibility === 'critical') {
    recommendations.push('geist', 'neo-brutalism');
  }

  if (criteria.complexity === 'low') {
    recommendations.push('geist', 'neo-brutalism');
  }

  // Retornar únicos
  return Array.from(new Set(recommendations));
}

export default designSystems;
