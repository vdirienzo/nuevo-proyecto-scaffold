import React, { InputHTMLAttributes, useState, useRef, useEffect } from 'react'

export interface ClayInputProps extends Omit<InputHTMLAttributes<HTMLInputElement>, 'size'> {
  label?: string
  error?: string
  variant?: 'pink' | 'blue' | 'green' | 'yellow' | 'purple'
  inputSize?: 'sm' | 'md' | 'lg'
  icon?: ReactNode
  iconPosition?: 'left' | 'right'
}

const variantStyles = {
  pink: 'focus:border-clay-pink-400 focus:ring-clay-pink-400/20',
  blue: 'focus:border-clay-blue-400 focus:ring-clay-blue-400/20',
  green: 'focus:border-clay-green-400 focus:ring-clay-green-400/20',
  yellow: 'focus:border-clay-yellow-400 focus:ring-clay-yellow-400/20',
  purple: 'focus:border-clay-purple-400 focus:ring-clay-purple-400/20',
}

const sizeStyles = {
  sm: 'px-3 py-2 text-sm',
  md: 'px-4 py-3 text-base',
  lg: 'px-5 py-4 text-lg',
}

import { ReactNode } from 'react'

export const ClayInput: React.FC<ClayInputProps> = ({
  label,
  error,
  variant = 'blue',
  inputSize = 'md',
  icon,
  iconPosition = 'left',
  className = '',
  disabled = false,
  ...props
}) => {
  const [isFocused, setIsFocused] = useState(false)
  const [hasValue, setHasValue] = useState(!!props.value || !!props.defaultValue)
  const inputRef = useRef<HTMLInputElement>(null)

  useEffect(() => {
    if (inputRef.current) {
      setHasValue(!!inputRef.current.value)
    }
  }, [props.value])

  const handleInputChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    setHasValue(!!e.target.value)
    if (props.onChange) {
      props.onChange(e)
    }
  }

  return (
    <div className="w-full">
      {/* Label */}
      {label && (
        <label
          className={`
            block mb-2 font-medium transition-all duration-200
            ${isFocused || hasValue ? 'text-gray-700 text-sm' : 'text-gray-600 text-base'}
            ${error ? 'text-red-500' : ''}
          `}
        >
          {label}
        </label>
      )}

      {/* Input container */}
      <div className="relative">
        {/* Icon left */}
        {icon && iconPosition === 'left' && (
          <div className="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
            {icon}
          </div>
        )}

        {/* Input */}
        <input
          ref={inputRef}
          className={`
            w-full rounded-clay
            bg-white
            border-2 border-gray-200
            shadow-clay-inset
            transition-all duration-200
            placeholder:text-gray-400
            disabled:opacity-50 disabled:cursor-not-allowed
            ${sizeStyles[inputSize]}
            ${variantStyles[variant]}
            ${isFocused ? 'animate-pop ring-4' : 'ring-0'}
            ${error ? 'border-red-400 focus:border-red-500 focus:ring-red-400/20' : ''}
            ${icon && iconPosition === 'left' ? 'pl-12' : ''}
            ${icon && iconPosition === 'right' ? 'pr-12' : ''}
            ${className}
          `}
          onFocus={(e) => {
            setIsFocused(true)
            if (props.onFocus) props.onFocus(e)
          }}
          onBlur={(e) => {
            setIsFocused(false)
            if (props.onBlur) props.onBlur(e)
          }}
          onChange={handleInputChange}
          disabled={disabled}
          {...props}
        />

        {/* Icon right */}
        {icon && iconPosition === 'right' && (
          <div className="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400">
            {icon}
          </div>
        )}
      </div>

      {/* Error message */}
      {error && (
        <p className="mt-2 text-sm text-red-500 animate-bounce-soft">
          {error}
        </p>
      )}

      {/* Floating label animation */}
      <style jsx>{`
        @keyframes label-float {
          0% { transform: translateY(0); }
          100% { transform: translateY(-8px); }
        }
      `}</style>
    </div>
  )
}

export default ClayInput
