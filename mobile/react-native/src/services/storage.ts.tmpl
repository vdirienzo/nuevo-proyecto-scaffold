/**
 * Storage Service (AsyncStorage wrapper with type safety)
 *
 * Author: {{AUTHOR}}
 */

import AsyncStorage from '@react-native-async-storage/async-storage';

const STORAGE_KEYS = {
  TOKEN: '@auth_token',
  USER: '@user_data',
  THEME: '@theme_preference',
} as const;

class StorageService {
  /**
   * Store a value
   */
  async set<T>(key: string, value: T): Promise<void> {
    try {
      const jsonValue = JSON.stringify(value);
      await AsyncStorage.setItem(key, jsonValue);
    } catch (error) {
      console.error('Error storing value:', error);
      throw error;
    }
  }

  /**
   * Retrieve a value
   */
  async get<T>(key: string): Promise<T | null> {
    try {
      const jsonValue = await AsyncStorage.getItem(key);
      return jsonValue != null ? JSON.parse(jsonValue) : null;
    } catch (error) {
      console.error('Error retrieving value:', error);
      return null;
    }
  }

  /**
   * Remove a value
   */
  async remove(key: string): Promise<void> {
    try {
      await AsyncStorage.removeItem(key);
    } catch (error) {
      console.error('Error removing value:', error);
      throw error;
    }
  }

  /**
   * Clear all storage
   */
  async clear(): Promise<void> {
    try {
      await AsyncStorage.clear();
    } catch (error) {
      console.error('Error clearing storage:', error);
      throw error;
    }
  }

  /**
   * Auth token helpers
   */
  async getToken(): Promise<string | null> {
    return this.get<string>(STORAGE_KEYS.TOKEN);
  }

  async setToken(token: string): Promise<void> {
    return this.set(STORAGE_KEYS.TOKEN, token);
  }

  async removeToken(): Promise<void> {
    return this.remove(STORAGE_KEYS.TOKEN);
  }

  /**
   * User data helpers
   */
  async getUser<T>(): Promise<T | null> {
    return this.get<T>(STORAGE_KEYS.USER);
  }

  async setUser<T>(user: T): Promise<void> {
    return this.set(STORAGE_KEYS.USER, user);
  }

  async removeUser(): Promise<void> {
    return this.remove(STORAGE_KEYS.USER);
  }

  /**
   * Theme preference helpers
   */
  async getTheme(): Promise<'light' | 'dark' | null> {
    return this.get<'light' | 'dark'>(STORAGE_KEYS.THEME);
  }

  async setTheme(theme: 'light' | 'dark'): Promise<void> {
    return this.set(STORAGE_KEYS.THEME, theme);
  }
}

export const storage = new StorageService();
