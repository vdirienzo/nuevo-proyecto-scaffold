import { useState, useEffect } from 'react';
import { getVersion } from '@tauri-apps/api/app';

interface SplashScreenProps {
  /** Duration in milliseconds to show the splash screen */
  duration?: number;
  /** Loading tasks to display progress */
  loadingTasks?: Array<{
    name: string;
    action: () => Promise<void>;
  }>;
  /** Callback when splash screen is done */
  onComplete?: () => void;
  /** Custom logo URL */
  logo?: string;
  /** Show version number */
  showVersion?: boolean;
}

export function SplashScreen({
  duration = 2000,
  loadingTasks = [],
  onComplete,
  logo,
  showVersion = true,
}: SplashScreenProps) {
  const [visible, setVisible] = useState(true);
  const [progress, setProgress] = useState(0);
  const [currentTask, setCurrentTask] = useState('Initializing...');
  const [version, setVersion] = useState('');
  const [fadeOut, setFadeOut] = useState(false);

  useEffect(() => {
    if (showVersion) {
      getVersion().then(setVersion);
    }

    if (loadingTasks.length > 0) {
      runLoadingTasks();
    } else {
      runSimpleProgress();
    }
  }, []);

  async function runLoadingTasks() {
    const totalTasks = loadingTasks.length;

    for (let i = 0; i < totalTasks; i++) {
      const task = loadingTasks[i];
      setCurrentTask(task.name);

      try {
        await task.action();
      } catch (error) {
        console.error(`Task ${task.name} failed:`, error);
      }

      setProgress(((i + 1) / totalTasks) * 100);
    }

    await finishSplash();
  }

  async function runSimpleProgress() {
    const steps = 100;
    const interval = duration / steps;

    for (let i = 0; i <= steps; i++) {
      setProgress(i);
      await new Promise(resolve => setTimeout(resolve, interval));
    }

    await finishSplash();
  }

  async function finishSplash() {
    setFadeOut(true);
    await new Promise(resolve => setTimeout(resolve, 300));
    setVisible(false);
    onComplete?.();
  }

  if (!visible) {
    return null;
  }

  return (
    <div
      className={`fixed inset-0 z-50 flex items-center justify-center bg-gradient-to-br from-blue-500 to-purple-600 dark:from-blue-900 dark:to-purple-900 transition-opacity duration-300 ${
        fadeOut ? 'opacity-0' : 'opacity-100'
      }`}
      role="dialog"
      aria-label="Loading application"
      aria-live="polite"
    >
      <div className="text-center">
        {/* Logo */}
        {logo ? (
          <img
            src={logo}
            alt="{{APP_TITLE}} logo"
            className="w-24 h-24 mx-auto mb-6 animate-pulse"
            draggable={false}
          />
        ) : (
          <div className="w-24 h-24 mx-auto mb-6 bg-white dark:bg-gray-800 rounded-2xl flex items-center justify-center shadow-2xl animate-pulse">
            <svg
              className="w-12 h-12 text-blue-600 dark:text-blue-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                strokeLinecap="round"
                strokeLinejoin="round"
                strokeWidth={2}
                d="M13 10V3L4 14h7v7l9-11h-7z"
              />
            </svg>
          </div>
        )}

        {/* App Title */}
        <h1 className="text-3xl font-bold text-white mb-2">
          {{APP_TITLE}}
        </h1>

        {/* Version */}
        {showVersion && version && (
          <p className="text-sm text-white/80 mb-6">
            Version {version}
          </p>
        )}

        {/* Loading Task */}
        <p className="text-white/90 mb-4 min-h-[1.5rem]" aria-live="polite">
          {currentTask}
        </p>

        {/* Progress Bar */}
        <div className="w-64 mx-auto">
          <div className="w-full bg-white/20 rounded-full h-2 overflow-hidden">
            <div
              className="bg-white h-2 rounded-full transition-all duration-300 ease-out"
              style={{ width: `${progress}%` }}
              role="progressbar"
              aria-valuenow={progress}
              aria-valuemin={0}
              aria-valuemax={100}
              aria-label="Loading progress"
            />
          </div>
          <p className="text-white/70 text-sm mt-2" aria-live="polite">
            {Math.round(progress)}%
          </p>
        </div>

        {/* Loading Spinner */}
        <div className="mt-6">
          <div className="inline-block animate-spin rounded-full h-8 w-8 border-4 border-white/20 border-t-white" aria-hidden="true" />
        </div>
      </div>
    </div>
  );
}

/**
 * Hook to create loading tasks for splash screen
 */
export function useAppInitialization() {
  const [tasks, setTasks] = useState<Array<{
    name: string;
    action: () => Promise<void>;
  }>>([]);

  function addTask(name: string, action: () => Promise<void>) {
    setTasks(prev => [...prev, { name, action }]);
  }

  function clearTasks() {
    setTasks([]);
  }

  return {
    tasks,
    addTask,
    clearTasks,
  };
}
