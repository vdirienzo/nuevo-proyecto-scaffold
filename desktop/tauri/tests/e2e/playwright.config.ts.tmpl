import { defineConfig, devices } from '@playwright/test';

/**
 * Playwright configuration for testing Tauri desktop applications
 * Uses Tauri WebDriver for native app automation
 */
export default defineConfig({
  // Test directory
  testDir: './tests/e2e',

  // Maximum time one test can run
  timeout: 60_000,

  // Fail the build on CI if you accidentally left test.only in the source code
  forbidOnly: !!process.env.CI,

  // Retry on CI only
  retries: process.env.CI ? 2 : 0,

  // Opt out of parallel tests on CI
  workers: process.env.CI ? 1 : undefined,

  // Reporter to use
  reporter: [
    ['html', { outputFolder: 'test-results/html' }],
    ['json', { outputFile: 'test-results/results.json' }],
    ['list'],
  ],

  // Shared settings for all the projects below
  use: {
    // Base URL for the app (will be set dynamically by Tauri)
    baseURL: 'http://localhost:1420',

    // Collect trace when retrying the failed test
    trace: 'on-first-retry',

    // Screenshot on failure
    screenshot: 'only-on-failure',

    // Video on failure
    video: 'retain-on-failure',

    // Maximum time each action such as `click()` can take
    actionTimeout: 10_000,

    // Maximum time to wait for navigation
    navigationTimeout: 30_000,
  },

  // Configure projects for different test scenarios
  projects: [
    {
      name: 'tauri-desktop',
      use: {
        ...devices['Desktop Chrome'],
        viewport: { width: 1280, height: 720 },
        // Tauri-specific settings
        launchOptions: {
          // Increased timeout for app startup
          timeout: 30_000,
        },
      },
    },
  ],

  // Global setup for Tauri
  globalSetup: require.resolve('./global-setup.ts'),

  // Global teardown
  globalTeardown: require.resolve('./global-teardown.ts'),

  // Folder for test artifacts such as screenshots, videos, traces, etc.
  outputDir: 'test-results/artifacts',

  // Run your local dev server before starting the tests
  webServer: process.env.CI
    ? undefined
    : {
        command: 'npm run tauri dev',
        url: 'http://localhost:1420',
        timeout: 120_000, // 2 minutes for app to start
        reuseExistingServer: !process.env.CI,
        stdout: 'pipe',
        stderr: 'pipe',
      },
});
