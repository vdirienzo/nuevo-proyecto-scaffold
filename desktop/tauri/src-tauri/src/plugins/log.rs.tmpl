#[tauri::command]
pub async fn log_error(
    message: String,
    error: Option<String>,
    context: Option<serde_json::Value>,
) -> Result<(), String> {
    let mut entry = LogEntry::new(levels::ERROR, "frontend", message);

    if let Some(err) = error {
        entry = entry.with_error(err);
    }

    if let Some(ctx) = context {
        entry = entry.with_context(ctx);
    }

    log::error!("{}", format_log_entry(&entry));
    Ok(())
}

#[tauri::command]
pub async fn get_log_path(app: AppHandle) -> Result<String, String> {
    get_log_dir(&app)
        .and_then(|path| path.to_str().map(String::from))
        .ok_or_else(|| "Failed to get log directory".to_string())
}

#[tauri::command]
pub async fn open_log_folder(app: AppHandle) -> Result<(), String> {
    let log_dir = get_log_dir(&app).ok_or("Failed to get log directory")?;

    #[cfg(target_os = "windows")]
    {
        std::process::Command::new("explorer")
            .arg(log_dir)
            .spawn()
            .map_err(|e| format!("Failed to open log folder: {}", e))?;
    }

    #[cfg(target_os = "macos")]
    {
        std::process::Command::new("open")
            .arg(log_dir)
            .spawn()
            .map_err(|e| format!("Failed to open log folder: {}", e))?;
    }

    #[cfg(target_os = "linux")]
    {
        std::process::Command::new("xdg-open")
            .arg(log_dir)
            .spawn()
            .map_err(|e| format!("Failed to open log folder: {}", e))?;
    }

    Ok(())
}

#[cfg(test)]
mod tests {
    use super::*;

    #[test]
    fn test_log_entry_creation() {
        let entry = LogEntry::new("info", "test", "Test message".to_string());
        assert_eq!(entry.level, "info");
        assert_eq!(entry.target, "test");
        assert_eq!(entry.message, "Test message");
    }

    #[test]
    fn test_log_entry_with_error() {
        let entry = LogEntry::new("error", "test", "Test error".to_string())
            .with_error("Error details".to_string());

        assert_eq!(entry.error, Some("Error details".to_string()));
    }

    #[test]
    fn test_log_entry_serialization() {
        let entry = LogEntry::new("info", "test", "Test".to_string());
        let json = format_log_entry(&entry);
        assert!(json.contains("\"level\":\"info\""));
        assert!(json.contains("\"message\":\"Test\""));
    }
}
