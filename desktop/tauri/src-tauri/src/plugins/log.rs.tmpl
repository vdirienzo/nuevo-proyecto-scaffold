use tauri::{AppHandle, Manager};
use tauri_plugin_log::{Target, TargetKind};

/// Setup logging plugin with file rotation and structured output
pub fn setup_logging(app: &AppHandle) {
    log::info!("Logging plugin initialized for {{PROJECT_NAME}}");
    log::info!("Log directory: {:?}", get_log_dir(app));
}

/// Get the log directory path
fn get_log_dir(app: &AppHandle) -> Option<std::path::PathBuf> {
    app.path()
        .app_log_dir()
        .ok()
}

/// Log levels configuration
pub mod levels {
    pub const DEBUG: &str = "debug";
    pub const INFO: &str = "info";
    pub const WARN: &str = "warn";
    pub const ERROR: &str = "error";
}

/// Structured log entry for JSON output
#[derive(serde::Serialize)]
pub struct LogEntry {
    pub timestamp: String,
    pub level: String,
    pub target: String,
    pub message: String,
    #[serde(skip_serializing_if = "Option::is_none")]
    pub error: Option<String>,
    #[serde(skip_serializing_if = "Option::is_none")]
    pub context: Option<serde_json::Value>,
}

impl LogEntry {
    /// Create new log entry
    pub fn new(level: &str, target: &str, message: String) -> Self {
        Self {
            timestamp: chrono::Utc::now().to_rfc3339(),
            level: level.to_string(),
            target: target.to_string(),
            message,
            error: None,
            context: None,
        }
    }

    /// Add error information
    pub fn with_error(mut self, error: String) -> Self {
        self.error = Some(error);
        self
    }

    /// Add context data
    pub fn with_context(mut self, context: serde_json::Value) -> Self {
        self.context = Some(context);
        self
    }
}

/// Custom log formatter for structured output
pub fn format_log_entry(entry: &LogEntry) -> String {
    match serde_json::to_string(entry) {
        Ok(json) => json,
        Err(e) => format!(
            "Failed to serialize log entry: {} - Original message: {}",
            e, entry.message
        ),
    }
}

#[tauri::command]
pub async fn log_debug(message: String, context: Option<serde_json::Value>) -> Result<(), String> {
    let entry = LogEntry::new(levels::DEBUG, "frontend", message);
    let entry = if let Some(ctx) = context {
        entry.with_context(ctx)
    } else {
        entry
    };

    log::debug!("{}", format_log_entry(&entry));
    Ok(())
}

