# Docker Compose para desarrollo de {{PROJECT_NAME}}
# Autor: {{AUTHOR}}
#
# Uso:
#   docker compose up -d          # Iniciar servicios en background
#   docker compose logs -f app    # Ver logs de la aplicación
#   docker compose down -v        # Detener y eliminar volúmenes

version: '3.9'

services:
  # ==========================================================================
  # Aplicación Tauri - Servicio principal
  # ==========================================================================
  app:
    build:
      context: .
      dockerfile: Dockerfile
      target: runtime
    container_name: {{PROJECT_NAME}}-app
    image: {{PROJECT_NAME}}:dev

    # Restart policy para desarrollo
    restart: unless-stopped

    # Variables de entorno (override con .env file)
    environment:
      - APP_DEBUG=${APP_DEBUG:-true}
      - RUST_LOG=${RUST_LOG:-debug}
      - RUST_BACKTRACE=${RUST_BACKTRACE:-1}
      - API_BASE_URL=${API_BASE_URL:-http://localhost:8080}
      - DATABASE_URL=${DATABASE_URL:-postgresql://postgres:password@db:5432/{{PROJECT_NAME}}}

    # Volúmenes para hot reload en desarrollo
    volumes:
      # Código fuente (read-only para seguridad)
      - ./src:/app/src:ro
      - ./src-tauri/src:/app/src-tauri/src:ro

      # Configuración
      - ./src-tauri/tauri.conf.json:/app/src-tauri/tauri.conf.json:ro

      # Cache de Cargo para builds más rápidos
      - cargo-cache:/usr/local/cargo/registry
      - cargo-git:/usr/local/cargo/git

      # Data persistente de la aplicación
      - app-data:/home/appuser/.local/share/{{PROJECT_NAME}}

      # X11 socket para GUI (Linux)
      - /tmp/.X11-unix:/tmp/.X11-unix:rw

      # DRI para aceleración hardware (opcional)
      # - /dev/dri:/dev/dri

    # Networking
    ports:
      - "${APP_PORT:-3000}:3000"  # Puerto para desarrollo frontend

    networks:
      - {{PROJECT_NAME}}-network

    # Dependencias (descomentar si usas base de datos)
    # depends_on:
    #   db:
    #     condition: service_healthy

    # X11 Display para GUI
    environment:
      - DISPLAY=${DISPLAY:-:0}

    # Dispositivos necesarios para GUI
    # devices:
    #   - /dev/dri:/dev/dri  # GPU acceleration

    # Security
    security_opt:
      - seccomp:unconfined  # Necesario para algunas operaciones de Tauri

    # Resource limits (ajustar según necesidades)
    deploy:
      resources:
        limits:
          cpus: '2.0'
          memory: 2G
        reservations:
          cpus: '1.0'
          memory: 512M

