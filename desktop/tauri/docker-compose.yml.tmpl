# =============================================================================
# Volumes - Persistencia de datos
# =============================================================================
volumes:
  # Cargo cache para builds más rápidos
  cargo-cache:
    driver: local

  cargo-git:
    driver: local

  # Data de la aplicación
  app-data:
    driver: local

  # Database data (descomentar si usas PostgreSQL)
  # postgres-data:
  #   driver: local

  # Redis data (descomentar si usas Redis)
  # redis-data:
  #   driver: local

# =============================================================================
# Networks - Aislamiento de servicios
# =============================================================================
networks:
  {{PROJECT_NAME}}-network:
    driver: bridge
    ipam:
      config:
        - subnet: 172.28.0.0/16

# =============================================================================
# Comandos Útiles:
# =============================================================================
#
# Desarrollo:
#   docker compose up --build              # Build y start
#   docker compose up -d                   # Start en background
#   docker compose logs -f app             # Ver logs en tiempo real
#   docker compose exec app bash           # Shell en el container
#   docker compose restart app             # Reiniciar app
#
# Producción:
#   docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d
#
# Limpieza:
#   docker compose down                    # Stop services
#   docker compose down -v                 # Stop y eliminar volúmenes
#   docker compose down --rmi all          # Stop y eliminar imágenes
#
# Database (si está habilitado):
#   docker compose exec db psql -U postgres -d {{PROJECT_NAME}}
#
# =============================================================================
