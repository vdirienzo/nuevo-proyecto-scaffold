# .pre-commit-config.yaml - Pre-commit Hooks Configuration
# Author: {{AUTHOR}}
# Project: {{PROJECT_NAME}}
#
# Install: pre-commit install
# Run manually: pre-commit run --all-files

repos:
  # General hooks
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v4.6.0
    hooks:
      - id: trailing-whitespace
      - id: end-of-file-fixer
      - id: check-yaml
        args: [--unsafe]
      - id: check-json
      - id: check-added-large-files
        args: ['--maxkb=1000']
      - id: detect-private-key
      - id: check-merge-conflict

  # Secrets detection (triple layer)
  - repo: https://github.com/gitleaks/gitleaks
    rev: v8.21.2
    hooks:
      - id: gitleaks

  - repo: https://github.com/trufflesecurity/trufflehog
    rev: v3.82.7
    hooks:
      - id: trufflehog
        entry: trufflehog git file://. --since-commit HEAD --only-verified --fail

  # Python hooks (for apps/api)
  - repo: https://github.com/astral-sh/ruff-pre-commit
    rev: v0.8.2
    hooks:
      - id: ruff
        args: [--fix]
      - id: ruff-format
        files: ^apps/api/

  - repo: https://github.com/pre-commit/mirrors-mypy
    rev: v1.13.0
    hooks:
      - id: mypy
        files: ^apps/api/
        additional_dependencies:
          - types-passlib
          - types-python-jose

  # Security scanning
  - repo: https://github.com/PyCQA/bandit
    rev: 1.7.10
    hooks:
      - id: bandit
        args: ['-r', 'apps/api/src', '-c', 'apps/api/pyproject.toml']
        files: ^apps/api/

  # TypeScript/JavaScript hooks (for apps/web)
  - repo: local
    hooks:
      - id: eslint
        name: eslint
        entry: pnpm --filter @{{PROJECT_NAME}}/web lint
        language: system
        files: \.(js|jsx|ts|tsx)$
        pass_filenames: false

      - id: typecheck
        name: typecheck
        entry: pnpm --filter @{{PROJECT_NAME}}/web type-check
        language: system
        files: \.(ts|tsx)$
        pass_filenames: false

  # Conventional commits
  - repo: https://github.com/compilerla/conventional-pre-commit
    rev: v3.4.0
    hooks:
      - id: conventional-pre-commit
        stages: [commit-msg]
