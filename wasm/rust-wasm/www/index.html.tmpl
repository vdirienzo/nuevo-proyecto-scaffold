<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{PROJECT_NAME}} - WASM Demo</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .container {
      background: white;
      border-radius: 16px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      padding: 40px;
      max-width: 800px;
      width: 100%;
    }

    h1 {
      color: #333;
      margin-bottom: 10px;
      font-size: 32px;
    }

    .subtitle {
      color: #666;
      margin-bottom: 30px;
      font-size: 16px;
    }

    .section {
      margin-bottom: 30px;
      padding: 20px;
      background: #f8f9fa;
      border-radius: 8px;
    }

    .section h2 {
      color: #667eea;
      margin-bottom: 15px;
      font-size: 20px;
    }

    input, textarea, button {
      width: 100%;
      padding: 12px;
      margin-bottom: 10px;
      border: 2px solid #e0e0e0;
      border-radius: 6px;
      font-size: 14px;
      font-family: inherit;
    }

    input:focus, textarea:focus {
      outline: none;
      border-color: #667eea;
    }

    button {
      background: #667eea;
      color: white;
      border: none;
      cursor: pointer;
      font-weight: 600;
      transition: background 0.2s;
    }

    button:hover {
      background: #5568d3;
    }

    button:disabled {
      background: #ccc;
      cursor: not-allowed;
    }

    .result {
      padding: 15px;
      background: white;
      border-left: 4px solid #667eea;
      margin-top: 10px;
      border-radius: 4px;
      font-family: 'Courier New', monospace;
      font-size: 13px;
      word-break: break-all;
    }

    .error {
      border-left-color: #e74c3c;
      color: #e74c3c;
    }

    .success {
      border-left-color: #2ecc71;
      color: #2ecc71;
    }

    .performance {
      font-size: 12px;
      color: #999;
      margin-top: 5px;
    }

    .file-input-wrapper {
      position: relative;
      overflow: hidden;
      display: inline-block;
      width: 100%;
    }

    .file-input-wrapper input[type=file] {
      position: absolute;
      left: -9999px;
    }

    .file-input-wrapper label {
      display: block;
      padding: 12px;
      background: white;
      border: 2px dashed #667eea;
      border-radius: 6px;
      cursor: pointer;
      text-align: center;
      color: #667eea;
      font-weight: 600;
    }

    .file-input-wrapper label:hover {
      background: #f8f9fa;
    }

    #imagePreview {
      max-width: 100%;
      margin-top: 10px;
      border-radius: 6px;
    }

    .loader {
      display: none;
      margin: 10px auto;
      border: 3px solid #f3f3f3;
      border-top: 3px solid #667eea;
      border-radius: 50%;
      width: 30px;
      height: 30px;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .loading .loader {
      display: block;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>{{PROJECT_NAME}}</h1>
    <p class="subtitle">WebAssembly Demo - High Performance in the Browser</p>

    <!-- Crypto Section -->
    <div class="section">
      <h2>üîê Cryptography</h2>
      <input type="text" id="hashInput" placeholder="Enter text to hash">
      <button onclick="hashText()">Calculate SHA-256</button>
      <div id="hashResult"></div>
    </div>

    <!-- Validation Section -->
    <div class="section">
      <h2>‚úÖ Validation</h2>
      <input type="email" id="emailInput" placeholder="Enter email to validate">
      <button onclick="validateEmail()">Validate Email</button>
      <input type="password" id="passwordInput" placeholder="Enter password to check strength" style="margin-top: 10px;">
      <button onclick="checkPassword()">Check Password Strength</button>
      <div id="validationResult"></div>
    </div>

    <!-- Image Processing Section -->
    <div class="section">
      <h2>üñºÔ∏è Image Processing</h2>
      <div class="file-input-wrapper">
        <input type="file" id="imageInput" accept="image/*" onchange="handleImage(event)">
        <label for="imageInput">Choose Image File</label>
      </div>
      <button onclick="processImage('grayscale')" id="grayscaleBtn" disabled>Grayscale</button>
      <button onclick="processImage('blur')" id="blurBtn" disabled>Blur</button>
      <button onclick="processImage('rotate')" id="rotateBtn" disabled>Rotate 90¬∞</button>
      <div class="loader"></div>
      <img id="imagePreview" style="display:none;">
      <div id="imageResult"></div>
    </div>

    <!-- Performance Section -->
    <div class="section">
      <h2>‚ö° Performance Test</h2>
      <button onclick="runPerformanceTest()">Run Benchmark</button>
      <div id="performanceResult"></div>
    </div>
  </div>

  <script src="./index.js"></script>
</body>
</html>
