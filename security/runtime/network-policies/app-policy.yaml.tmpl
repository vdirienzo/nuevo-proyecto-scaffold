# app-policy.yaml - Application Network Policy
# Author: {{AUTHOR}}
# Project: {{PROJECT_NAME}}

apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: {{PROJECT_NAME}}-api-policy
  namespace: {{NAMESPACE}}
spec:
  podSelector:
    matchLabels:
      app: {{PROJECT_NAME}}
      component: api
  policyTypes:
    - Ingress
    - Egress
  ingress:
    # Allow from ingress controller
    - from:
        - namespaceSelector:
            matchLabels:
              kubernetes.io/metadata.name: ingress-nginx
      ports:
        - protocol: TCP
          port: 8000
    # Allow from web frontend
    - from:
        - podSelector:
            matchLabels:
              app: {{PROJECT_NAME}}
              component: web
      ports:
        - protocol: TCP
          port: 8000
  egress:
    # Allow to database
    - to:
        - podSelector:
            matchLabels:
              app: {{PROJECT_NAME}}
              component: database
      ports:
        - protocol: TCP
          port: 5432
    # Allow to Redis
    - to:
        - podSelector:
            matchLabels:
              app: {{PROJECT_NAME}}
              component: redis
      ports:
        - protocol: TCP
          port: 6379
    # Allow external HTTPS
    - to:
        - ipBlock:
            cidr: 0.0.0.0/0
      ports:
        - protocol: TCP
          port: 443
---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: {{PROJECT_NAME}}-db-policy
  namespace: {{NAMESPACE}}
spec:
  podSelector:
    matchLabels:
      app: {{PROJECT_NAME}}
      component: database
  policyTypes:
    - Ingress
  ingress:
    # Only allow from API
    - from:
        - podSelector:
            matchLabels:
              app: {{PROJECT_NAME}}
              component: api
      ports:
        - protocol: TCP
          port: 5432
