# trufflehog.yaml - TruffleHog Configuration
# Author: {{AUTHOR}}
# Project: {{PROJECT_NAME}}

version: "3"

detectors:
  - name: AWS
    keywords:
      - AKIA
      - aws_access_key_id
      - aws_secret_access_key

  - name: GitHub
    keywords:
      - ghp_
      - gho_
      - ghu_
      - ghs_
      - ghr_

  - name: Stripe
    keywords:
      - sk_live_
      - sk_test_
      - rk_live_
      - rk_test_

  - name: Slack
    keywords:
      - xoxb-
      - xoxp-
      - xoxa-
      - xoxr-

  - name: SendGrid
    keywords:
      - SG.

  - name: Twilio
    keywords:
      - SK[a-z0-9]{32}
      - AC[a-z0-9]{32}

exclude:
  paths:
    - "**/.git/**"
    - "**/node_modules/**"
    - "**/vendor/**"
    - "**/.venv/**"
    - "**/dist/**"
    - "**/build/**"
    - "**/*.min.js"
    - "**/*.lock"
    - "**/package-lock.json"
    - "**/pnpm-lock.yaml"

  files:
    - "*.test.ts"
    - "*.spec.ts"
    - "*.test.js"
    - "*.spec.js"
    - "conftest.py"
    - "test_*.py"

only-verified: false
json: true
fail: true
