# load-test.yml - Load Testing with k6
# Author: {{AUTHOR}}
# Project: {{PROJECT_NAME}}

name: Load Tests

on:
  workflow_dispatch:
    inputs:
      scenario:
        description: 'Test scenario'
        required: true
        default: 'smoke'
        type: choice
        options:
          - smoke
          - stress
          - spike
          - soak
      environment:
        description: 'Target environment'
        required: true
        default: 'staging'
        type: choice
        options:
          - staging
          - production
  schedule:
    - cron: '0 6 * * 1-5'  # Weekdays at 6 AM

env:
  K6_CLOUD_TOKEN: ${{ secrets.K6_CLOUD_TOKEN }}

jobs:
  load-test:
    name: k6 Load Test
    runs-on: ubuntu-latest
    environment: ${{ inputs.environment || 'staging' }}
    steps:
      - uses: actions/checkout@v4

      - name: Setup k6
        uses: grafana/setup-k6-action@v1

      - name: Set target URL
        id: target
        run: |
          if [ "${{ inputs.environment }}" == "production" ]; then
            echo "url=https://api.{{PROJECT_NAME}}.com" >> $GITHUB_OUTPUT
          else
            echo "url=https://staging-api.{{PROJECT_NAME}}.com" >> $GITHUB_OUTPUT
          fi

      - name: Run k6 ${{ inputs.scenario || 'smoke' }} test
        run: |
          k6 run \
            --env BASE_URL=${{ steps.target.outputs.url }} \
            --out cloud \
            tests/load/k6/scenarios/${{ inputs.scenario || 'smoke' }}.js

      - name: Upload Results
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: k6-results-${{ inputs.scenario || 'smoke' }}
          path: |
            k6-summary.json
            k6-results.json
          retention-days: 30

  notify:
    name: Notify Results
    runs-on: ubuntu-latest
    needs: load-test
    if: failure()
    steps:
      - name: Slack Notification
        uses: slackapi/slack-github-action@v1
        with:
          payload: |
            {
              "text": "⚠️ Load test failed for {{PROJECT_NAME}}",
              "blocks": [
                {
                  "type": "section",
                  "text": {
                    "type": "mrkdwn",
                    "text": "*Load Test Failed*\nScenario: ${{ inputs.scenario }}\nEnvironment: ${{ inputs.environment }}\n<${{ github.server_url }}/${{ github.repository }}/actions/runs/${{ github.run_id }}|View Run>"
                  }
                }
              ]
            }
        env:
          SLACK_WEBHOOK_URL: ${{ secrets.SLACK_WEBHOOK_URL }}
