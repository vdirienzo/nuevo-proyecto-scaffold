# EditorConfig Configuration
# Author: {{AUTHOR}}
# Project: {{PROJECT_NAME}}
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_style = space
indent_size = 2

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{py}]
indent_style = space
indent_size = 4
max_line_length = 88

[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = 80

[*.{sh,bash}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.toml]
indent_style = space
indent_size = 2

[*.{html,css,scss}]
indent_style = space
indent_size = 2

[*.sql]
indent_style = space
indent_size = 2

[.env*]
insert_final_newline = false
