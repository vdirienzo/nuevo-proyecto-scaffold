{
  "name": "{{PROJECT_NAME}}",
  "version": "0.1.0",
  "exports": "./main.ts",
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read --unstable-kv main.ts",
    "dev": "deno run --watch --allow-net --allow-env --allow-read --unstable-kv main.ts",
    "test": "deno test --allow-net --allow-env --allow-read --unstable-kv",
    "fresh:start": "deno run -A --watch=static/,routes/ dev.ts",
    "fresh:build": "deno run -A dev.ts build",
    "fresh:preview": "deno run -A main.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check **/*.ts **/*.tsx"
  },
  "imports": {
    "$std/": "jsr:@std/",
    "@std/dotenv": "jsr:@std/dotenv@^0.224.0",
    "@std/http": "jsr:@std/http@^1.0.0",
    "@std/async": "jsr:@std/async@^1.0.0",
    "@std/crypto": "jsr:@std/crypto@^1.0.0",
    "@std/encoding": "jsr:@std/encoding@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "oak": "jsr:@oak/oak@^16.0.0",
    "hono": "jsr:@hono/hono@^4.0.0",
    "fresh": "https://deno.land/x/fresh@1.6.0/mod.ts",
    "preact": "https://esm.sh/preact@10.19.3",
    "preact/": "https://esm.sh/preact@10.19.3/",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "djwt": "https://deno.land/x/djwt@v3.0.2/mod.ts",
    "zod": "https://deno.land/x/zod@v3.22.4/mod.ts",
    "postgres": "https://deno.land/x/postgres@v0.19.3/mod.ts",
    "@supabase/supabase-js": "npm:@supabase/supabase-js@^2.39.0"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["deno.window", "deno.unstable"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "exclude": [
    "node_modules/",
    ".git/",
    "dist/",
    "build/"
  ]
}
