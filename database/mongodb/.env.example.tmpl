# MongoDB Configuration
# Project: {{PROJECT_NAME}}
# Author: {{AUTHOR}}

# MongoDB Connection String
# Format: mongodb://[username:password@]host[:port][/database][?options]
MONGODB_URI=mongodb://localhost:27017/{{PROJECT_NAME}}

# MongoDB Connection Pool Settings
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2

# MongoDB Connection Timeout
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_CONNECT_TIMEOUT_MS=10000

# MongoDB Options
MONGODB_RETRY_WRITES=true
MONGODB_W=majority

# MongoDB Database Name
MONGODB_DATABASE={{PROJECT_NAME}}

# For Production with Authentication:
# MONGODB_URI=mongodb://admin:password@mongodb:27017/{{PROJECT_NAME}}?authSource=admin

# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/{{PROJECT_NAME}}?retryWrites=true&w=majority

# For Replica Set:
# MONGODB_URI=mongodb://host1:27017,host2:27017,host3:27017/{{PROJECT_NAME}}?replicaSet=rs0
