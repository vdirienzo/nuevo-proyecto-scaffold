# docker-compose.prod.yml - Production Environment
# Author: {{AUTHOR}}
# Project: {{PROJECT_NAME}}
#
# Usage:
#   docker compose -f docker-compose.prod.yml up -d
#
# IMPORTANT: Use environment variables or secrets manager for sensitive data

services:
  # ==========================================================================
  # API (FastAPI Backend)
  # ==========================================================================
  api:
    image: ${REGISTRY:-ghcr.io}/{{GITHUB_ORG}}/{{PROJECT_NAME}}-api:${VERSION:-latest}
    container_name: {{PROJECT_NAME}}-api
    ports:
      - "8000:8000"
    environment:
      - ENVIRONMENT=production
      - DEBUG=false
      - DATABASE_URL=${DATABASE_URL}
      - SECRET_KEY=${SECRET_KEY}
      - CORS_ORIGINS=${CORS_ORIGINS}
    deploy:
      replicas: 2
      resources:
        limits:
          cpus: '1'
          memory: 512M
        reservations:
          cpus: '0.25'
          memory: 256M
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    networks:
      - {{PROJECT_NAME}}-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s

  # ==========================================================================
  # Web (Next.js Frontend)
  # ==========================================================================
  web:
    image: ${REGISTRY:-ghcr.io}/{{GITHUB_ORG}}/{{PROJECT_NAME}}-web:${VERSION:-latest}
    container_name: {{PROJECT_NAME}}-web
    ports:
      - "3000:3000"
    environment:
      - NODE_ENV=production
      - NEXT_PUBLIC_API_URL=${API_URL}
    deploy:
      replicas: 2
      resources:
        limits:
          cpus: '0.5'
          memory: 256M
        reservations:
          cpus: '0.1'
          memory: 128M
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    networks:
      - {{PROJECT_NAME}}-network
    depends_on:
      - api

  # ==========================================================================
  # Nginx Reverse Proxy
  # ==========================================================================
  nginx:
    image: nginx:alpine
    container_name: {{PROJECT_NAME}}-nginx
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./infrastructure/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./infrastructure/nginx/ssl:/etc/nginx/ssl:ro
    depends_on:
      - api
      - web
    networks:
      - {{PROJECT_NAME}}-network
    restart: unless-stopped

networks:
  {{PROJECT_NAME}}-network:
    driver: bridge
