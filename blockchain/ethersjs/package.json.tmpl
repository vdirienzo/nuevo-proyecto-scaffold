{
  "name": "{{PROJECT_NAME}}-blockchain",
  "version": "1.0.0",
  "description": "Blockchain integration with Ethers.js and Foundry",
  "author": "{{AUTHOR}}",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "foundry:build": "forge build",
    "foundry:test": "forge test -vvv",
    "foundry:deploy": "forge script script/Deploy.s.sol:DeployScript --rpc-url $RPC_URL --broadcast --verify",
    "generate:types": "typechain --target ethers-v6 --out-dir src/types/contracts 'contracts/out/**/*.json'",
    "deploy": "tsx scripts/deploy.ts",
    "seed": "tsx scripts/seed.ts"
  },
  "dependencies": {
    "ethers": "^6.13.0",
    "wagmi": "^2.12.0",
    "viem": "^2.21.0",
    "@tanstack/react-query": "^5.56.0",
    "@rainbow-me/rainbowkit": "^2.1.0",
    "abitype": "^1.0.0"
  },
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.1",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.9.0",
    "prettier": "^3.3.0",
    "tsup": "^8.2.0",
    "tsx": "^4.19.0",
    "typechain": "^8.3.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0",
    "@vitest/ui": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
